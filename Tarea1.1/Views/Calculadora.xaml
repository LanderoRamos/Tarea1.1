<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tarea1._1.Views.Calculadora"
             Title="Calculadora">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry x:Name="MyEntry_1" 
               Placeholder="Ingresa Primer numero" 
               Keyboard="Numeric"
               TextChanged="OnTextChanged"/>

        <Entry x:Name="MyEntry_2" 
               Placeholder="Ingresa Segundo numero" 
               Keyboard="Numeric"
               TextChanged="OnTextChanged"/>

        <!-- BotÃ³n -->
        <Button Text="Suma"
                x:Name="btnsuma"
                Clicked="OnButton1Clicked" 
                Margin="5"/>
        

        <Button Text="Resta"
                x:Name="btnresta"
                Clicked="OnButton2Clicked" 
                Margin="5"/>

        <Button Text="Multiplicacion"
        x:Name="btnmulti"
        Clicked="OnButton3Clicked" 
        Margin="5"/>


        <Button Text="Division"
            x:Name="btndiv"
            Clicked="OnButton4Clicked" 
            Margin="5"/>


    </VerticalStackLayout>
</ContentPage>